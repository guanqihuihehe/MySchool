<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        app:navGraph="@navigation/mobile_navigation"
        app:defaultNavHost="true"
        android:name="com.example.myschoolapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        app:navGraph="@navigation/mobile_navigation"
        app:defaultNavHost="true"
        android:name="com.example.myschoolapp.ui.intranet.IntranetFragment"
        android:label="@string/title_intranet"
        tools:layout="@layout/fragment_intranet" />

    <fragment
        android:id="@+id/navigation_notifications"
        app:navGraph="@navigation/mobile_navigation"
        app:defaultNavHost="true"
        android:name="com.example.myschoolapp.ui.mine.MineFragment"
        android:label="@string/title_mine"
        tools:layout="@layout/fragment_mine" />
</navigation>